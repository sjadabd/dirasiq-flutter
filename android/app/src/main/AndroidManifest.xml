<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ✅ أذونات النظام -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- ضروري لأندرويد 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>

    <application
        android:name="${applicationName}"
        android:label="Mulhim IQ"
        android:icon="@mipmap/ic_launcher"
        android:enableOnBackInvokedCallback="true">

        <!-- ✅ Google Play Services required -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- ✅ Google Sign-In Client ID -->
        <meta-data
            android:name="com.google.android.gms.client_id"
            android:value="86749213367-bu708isbvui40kq5e4r84n8kk6ggr14g.apps.googleusercontent.com" />

        <!-- ✅ OneSignal App Id -->
        <meta-data
            android:name="onesignal_app_id"
            android:value="b136e33d-56f0-4fc4-ad08-8c8a534ca447" />

        <!-- ✅ OneSignal Remote Sender -->
        <meta-data
            android:name="onesignal_google_project_number"
            android:value="REMOTE" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode">

            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme"/>

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

    </application>

</manifest>
